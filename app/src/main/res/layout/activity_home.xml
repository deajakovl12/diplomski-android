<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@android:color/white"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/connected_wifi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="16sp" />

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/connected_wifi">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true"
                android:id="@+id/profile_image"
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:src="@drawable/sss"/>

            <TextView
                android:textSize="16sp"
                tools:text = "Aaaaaaaaaaaaaaaaa"
                android:textColor="@android:color/black"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/profile_image"
                android:id="@+id/login_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:textSize="15sp"
                tools:text = "Aaaaaaaaaaaaaaafsafsaasfaa"
                android:textColor="@android:color/black"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/login_user_name"
                android:id="@+id/user_address"
                android:layout_width="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_height="wrap_content" />

            <RelativeLayout
                android:id="@+id/layout_image_kazna"
                android:layout_width="match_parent"
                android:layout_below="@id/user_address"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/user_kazna"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="10dp"
                    android:textColor="@android:color/black"
                    android:textSize="15sp"
                    tools:text="Aaaaaaaaaaaaaaafsafsaasfaa" />

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_toLeftOf="@+id/user_kazna"
                    android:src="@drawable/kazna" />

            </RelativeLayout>

            <Button
                android:background="@color/colorPrimary"
                android:textColor="@android:color/white"
                android:layout_marginLeft="120dp"
                android:layout_marginRight="120dp"
                android:id="@+id/button_slika"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/layout_image_kazna"
                android:text="Započni slikanje" />

            <LinearLayout
                android:visibility="gone"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/button_slika"
                android:orientation="vertical"
                android:id="@+id/detail_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/text_millis"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="10dp"
                        android:textColor="@android:color/black"
                        android:textSize="15sp"
                        tools:text="Aaaaaaaaaaaaaaafsafsaasfaa" />

                    <ImageView
                        android:layout_marginRight="10dp"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_toLeftOf="@+id/text_millis"
                        android:src="@drawable/clock" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/text_location"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="10dp"
                        android:textColor="@android:color/black"
                        android:textSize="15sp"
                        tools:text="Aaaaaaaaaaaaaaafsafsaasfaa" />

                    <ImageView
                        android:layout_marginRight="10dp"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_toLeftOf="@+id/text_location"
                        android:src="@drawable/location" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/text_distance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="10dp"
                        android:textColor="@android:color/black"
                        android:textSize="15sp"
                        tools:text="Aaaaaaaaaaaaaaafsafsaasfaa" />

                    <ImageView
                        android:layout_marginRight="10dp"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_toLeftOf="@+id/text_distance"
                        android:src="@drawable/distance" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/text_speed"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="10dp"
                        android:textColor="@android:color/black"
                        android:textSize="15sp"
                        tools:text="Aaaaaaaaaaaaaaafsafsaasfaa" />

                    <ImageView
                        android:layout_marginRight="10dp"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_toLeftOf="@+id/text_speed"
                        android:src="@drawable/speed" />

                </RelativeLayout>


            </LinearLayout>

            <SurfaceView
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_centerInParent="true"
                android:id="@+id/surface"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_below="@id/detail_layout"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/signature_capture_clear_canvas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/surface"
                android:background="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:text="CLEAR CANVAS"
                android:textColor="@color/colorAccent"
                android:textSize="16sp"
                android:textStyle="bold" />

            <com.simplify.ink.InkView
                android:layout_marginBottom="70dp"
                android:id="@+id/signature_capture_canvas"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_below="@+id/signature_capture_clear_canvas"
                android:background="#F0F0F0" />
        </RelativeLayout>
    </ScrollView>

    <Button
        android:background="@color/colorPrimary"
        android:textColor="@android:color/white"
        android:layout_alignParentBottom="true"
        android:id="@+id/button_zapocni"
        android:layout_marginLeft="120dp"
        android:layout_marginRight="120dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="zapocni" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab3"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="11dp"
        app:srcCompat="@android:drawable/ic_btn_speak_now" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab2"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="11dp"
        app:srcCompat="@drawable/ic_wifi_black_24dp" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab1"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="11dp"
        app:srcCompat="@drawable/ic_power_settings_new_black_24dp" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="8dp"
        app:srcCompat="@drawable/ic_account_circle_black_24dp" />
</RelativeLayout>
